filetype plugin indent on 
syntax on

set t_Co=256
set background=dark
set number                     "numbered lines
set numberwidth=1              "gap between number/content
set shiftwidth=4               "make sure auto indent is 4
set tabstop=4                  "spaces per tab
set softtabstop=4              "spaces per tab when editing
set expandtab                  "tabs == spaces
set autoindent                 "next line indented at current indent
set showmatch                  "highlight search matches
set incsearch                  "search as characters are entered
set hlsearch                   "highlight matches
set backspace=indent,eol,start "backspace over everything

